<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_panel_war"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="25dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/war_nb_armies_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of armies : 1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <SeekBar
        android:id="@+id/war_nb_armies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="6"
        android:progress="1" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Occupation rule if equality around empty cell :"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="11sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="never"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="11sp" />

        <SeekBar
            android:id="@+id/war_setting_occupation_progress"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:progress="1" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="always"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="11sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Dying rule if equality around occupied cell :"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="11sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="never"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="11sp" />

        <SeekBar
            android:id="@+id/war_setting_dying_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="always"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="11sp" />

    </LinearLayout>

</LinearLayout>